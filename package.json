{
  "name": "GalNetOps",
  "version": "1.0.0-beta.1",
  "description": "Elite Dangerous Exploration Companion",
  "main": "dist/main/index.js",
  "author": "Ma77h3hac83r",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently -k \"npm run dev:renderer\" \"npm run dev:main\" \"npm run dev:electron\"",
    "dev:renderer": "vite",
    "dev:main": "tsc -p tsconfig.main.json -w",
    "dev:electron": "wait-on http://localhost:5173 && wait-on dist/main/index.js && electron .",
    "build": "npm run typecheck && npm run typecheck:main && npm run build:renderer && npm run build:main",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "start": "electron .",
    "package": "npm run build && electron-builder",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:linux:appimage": "npm run build && electron-builder --linux AppImage",
    "package:linux:deb": "npm run build && electron-builder --linux deb",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "typecheck:main": "tsc -p tsconfig.main.json --noEmit",
    "postinstall": "electron-rebuild -f -w better-sqlite3"
  },
  "dependencies": {
    "@tanstack/react-virtual": "^3.13.18",
    "better-sqlite3": "^11.7.0",
    "chokidar": "^4.0.3",
    "electron-store": "^8.2.0",
    "recharts": "^3.7.0",
    "zod": "^3.24.1",
    "zustand": "^5.0.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.12",
    "@types/node": "^22.10.7",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "electron": "^34.0.2",
    "electron-builder": "^25.1.8",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9.18.0",
    "postcss": "^8.5.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.3",
    "vite": "^6.0.7",
    "vite-plugin-electron": "^0.28.8",
    "wait-on": "^9.0.3"
  },
  "build": {
    "appId": "com.galnetops.app",
    "productName": "GalNetOps",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "resources/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/galnetops_icon.ico",
      "sign": null,
      "signAndEditExecutable": false
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Utility",
      "icon": "public/galnetops_icon.png"
    },
    "appImage": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "deb": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
